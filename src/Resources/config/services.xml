<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="odoo_service" class="Odoo\ConnectorBundle\Service\OdooService" public="true" >
            <argument>%url_odoo%</argument>
            <argument>%db_odoo%</argument>
            <argument>%username_odoo%</argument>
            <argument>%password_odoo%</argument>
        </service>

        <service id="purchase_order_service" class="Odoo\ConnectorBundle\Service\PurchaseOrderService" public="true" >
            <argument  type="service" id="odoo_service" />
            <argument  type="service" id="product_service"/>
        </service>
        <service id="product_service" class="Odoo\ConnectorBundle\Service\ProductService" public="true" >
            <argument  type="service" id="odoo_service" />

        </service>
     </services>
     </container>